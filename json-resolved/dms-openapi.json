  "servers" : [ {
    "url" : "/"
  } ],
  "paths" : {
    "/search/document" : {
      "get" : {
        "summary" : "searches documents based on parameters",
        "description" : "By passing in the appropriate options, you can search for\navailable inventory in the system\n",
        "parameters" : [ {
          "name" : "date",
          "in" : "query",
          "description" : "pass a date range to search documents based on that date range",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "format" : "date"
          }
        }, {
          "name" : "category",
          "in" : "query",
          "description" : "category id",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "integer"
          }
        }, {
          "name" : "search",
          "in" : "query",
          "description" : "keyword",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "drafted_by",
          "in" : "query",
          "description" : "user id of the document creator",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "integer"
          }
        }, {
          "name" : "status",
          "in" : "query",
          "description" : "status of the document (all/accepted/rejected)",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Ok",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : { }
                }
              }
            }
          }
        }
      }
    },
    "/document/recent-documents" : {
      "get" : {
        "summary" : "Get recently drafted documents based on drafting date (maximum 10)",
        "responses" : {
          "200" : {
            "description" : "Ok",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : { }
                }
              }
            }
          }
        }
      }
    },
    "/search/category" : {
      "get" : {
        "summary" : "Get the list of all active categories",
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : { }
                }
              }
            }
          }
        }
      }
    },
    "/document/view-history" : {
      "get" : {
        "summary" : "Get the history logs of a document date wise",
        "parameters" : [ {
          "name" : "document_id",
          "in" : "query",
          "description" : "id of the document",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : { }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Schema" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int64"
          }
        }
      }
    }
  }
}